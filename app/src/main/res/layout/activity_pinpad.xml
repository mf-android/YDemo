<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/inputPin"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Input Pin" />

    <Button
        android:id="@+id/increaseKsn"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Increase ksn" />

    <Button
        android:id="@+id/dukptInit"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Dukpt init" />

    <Button
        android:id="@+id/dukptCalc"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Dukpt calc" />

    <Button
        android:id="@+id/calcMac"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Calc Mac" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>