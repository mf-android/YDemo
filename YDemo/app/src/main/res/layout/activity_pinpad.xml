<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/inputPin"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Input Pin" />


    <Button
        android:id="@+id/dukptInit"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Dukpt init" />

    <Button
        android:id="@+id/getKsn"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Get current ksn" />

    <Button
        android:id="@+id/increaseKsn"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Increase ksn" />

    <Button
        android:id="@+id/dukptEncrypt"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Dukpt encrypt" />

    <Button
        android:id="@+id/dukptDeccrypt"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Dukpt decrypt" />

    <Button
        android:id="@+id/calcMac"
        android:layout_width="match_parent"
        style="@style/doneBtn"
        android:text="Calc Mac" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_margin="5dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />

    </ScrollView>

</LinearLayout>