<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dukptInit"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Dukpt init" />

        <Button
            android:id="@+id/inputPin"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Input Pin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/getKsn"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:text="Get current ksn" />

        <Button
            android:layout_weight="1"
            android:id="@+id/increaseKsn"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:text="Increase ksn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/dukptEncrypt"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:text="Dukpt encrypt" />

        <Button
            android:layout_weight="1"
            android:id="@+id/dukptDeccrypt"
            style="@style/doneBtn"
            android:layout_width="match_parent"
            android:text="Dukpt decrypt" />

    </LinearLayout>


    <Button
        android:id="@+id/calcMac"
        style="@style/doneBtn"
        android:layout_width="match_parent"
        android:text="Calc Mac" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="18sp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>